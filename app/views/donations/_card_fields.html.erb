<div class="nested-form-wrapper" data-new-record="<%= f.object.new_record? %>">
  <div class="row">
    <%= f.input :card_number, label: "Numero de tarjeta", placeholder: "12 digitos", class: "form-cotrol", wrapper_html: { class: "col-6" } %>
    <%= f.input :security_code, label: "Codigo de seguridad", placeholder: "3 digitos", class: "form-cotrol", wrapper_html: { class: "col-3" } %>
    <%= f.input :expiration_date, label: "Fecha de expiracion", as: :date, class: "form-control", html5: true, wrapper_html: { class: "col-3" } %>
  </div>
  <div class="row">
    <%= f.input :card_type, as: :select, label: "Tipo de tarjeta", prompt: "Tipo de tarjeta", collection: Card.card_types, class: "form-select", wrapper_html: { class: "col-4" }, value_method: -> (r) { r[0] } %>
    <%= f.input :document_type, as: :select, label: "Tipo de documento", prompt: "Tipo de documento", collection: Card.document_types, class: "form-select", wrapper_html: { class: "col-4" }, value_method: -> (r) { r[0] } %>
    <%= f.input :document_number, label: "Numero de documento", placeholder: '1234567', class: "form-control", wrapper_html: { class: "col-4" } %>
  </div>

  <button type="button" data-action="nested-form#remove" class="btn btn-success mb-2">Remover </button>

  <%= f.hidden_field :_destroy %>
</div>
